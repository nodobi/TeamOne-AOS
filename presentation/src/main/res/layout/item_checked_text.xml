<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="reason"
            type="com.connectcrew.presentation.model.project.KickReasonItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_kick_reason"
            style="@style/Widget.TeamOne.ColoredCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="@{reason.kickReason.reason}"
            android:checked="@{reason.checked}"
            android:textAppearance="@style/TextAppearance.TeamOne.Button2"
            android:textColor="@{reason.checked ? @color/color_00aee4 : @color/color_616161}"
            tools:ignore="RtlSymmetry"
            tools:text="내보내기 사유" />
    </LinearLayout>
</layout>